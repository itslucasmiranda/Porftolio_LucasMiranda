---
import Section from '../ui/Section.astro';
import Card from '../ui/Card.astro';

// Get the company logos
interface Experience {
  company: string;
  logo: string;
  position: string;
  period: string;
  description: string;
}

const experiences: Experience[] = [
{
    company: 'AlphaKar',
    logo: '/assets/svgs/AlphaKar.jpeg', 
    position: 'Lider de Retenção e Dev Back-End de Suporte',
